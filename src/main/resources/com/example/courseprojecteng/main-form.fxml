<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.courseprojecteng.fxController.MainForm">
   <children>
      <TabPane prefHeight="400.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Shop">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ListView fx:id="productList" layoutX="14.0" layoutY="14.0" prefHeight="205.0" prefWidth="172.0" />
                        <Button fx:id="LeaveARewiev" layoutX="28.0" layoutY="238.0" mnemonicParsing="false" onAction="#loadReviewForm" text="Leave a rewiev" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
            <Tab text="Product">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ListView fx:id="productAdminList" layoutX="14.0" layoutY="49.0" onMouseClicked="#loadProductData" prefHeight="257.0" prefWidth="140.0" />
                        <TextField fx:id="productTitleField" layoutX="176.0" layoutY="51.0" promptText="Title" />
                        <TextField fx:id="productQuantityField" layoutX="176.0" layoutY="249.0" promptText="Quantity" />
                        <TextArea fx:id="productDescriptionField" layoutX="176.0" layoutY="93.0" prefHeight="149.0" prefWidth="150.0" promptText="Description" />
                        <TextField fx:id="productGenreField" layoutX="390.0" layoutY="93.0" prefHeight="25.0" prefWidth="174.0" promptText="Genre" />
                        <DatePicker fx:id="productDateBookField" layoutX="390.0" layoutY="51.0" promptText="Pubblication date" />
                        <TextField fx:id="productHouseBookField" layoutX="390.0" layoutY="132.0" prefHeight="25.0" prefWidth="173.0" promptText="Pubblication house" />
                        <Button layoutX="176.0" layoutY="294.0" mnemonicParsing="false" onAction="#createRecord" text="Add" />
                        <Button layoutX="266.0" layoutY="294.0" mnemonicParsing="false" onAction="#updateRecord" text="Update" />
                        <Button layoutX="364.0" layoutY="294.0" mnemonicParsing="false" onAction="#deleteRecord" text="Delete" />
                        <RadioButton fx:id="productBookRadio" layoutX="170.0" layoutY="20.0" mnemonicParsing="false" onAction="#disableFields" text="Book">
                           <toggleGroup>
                              <ToggleGroup fx:id="productType" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="productMagazineRadio" layoutX="281.0" layoutY="20.0" mnemonicParsing="false" onAction="#disableField" text="Magazine" toggleGroup="$productType" />
                        <RadioButton fx:id="productStationeryRadio" layoutX="390.0" layoutY="20.0" mnemonicParsing="false" onAction="#disableFields" text="Stationery" toggleGroup="$productType" />
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
          <Tab text="User">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
            <Tab text="Orders">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
              </content>
            </Tab>
            <Tab text="Wearhouse">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
              </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
